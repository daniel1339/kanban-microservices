{
  "name": "kanban-backend",
  "version": "1.0.0",
  "description": "Backend microservices for Kanban application",
  "scripts": {
    "dev:all": "concurrently \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:board\" \"npm run dev:list\" \"npm run dev:card\" \"npm run dev:notification\" \"npm run dev:file\" \"npm run dev:gateway\"",
    "dev:auth": "cd services/auth-service && npm run start:dev",
    "dev:user": "cd services/user-service && npm run start:dev",
    "dev:board": "cd services/board-service && npm run start:dev",
    "dev:list": "cd services/list-service && npm run start:dev",
    "dev:card": "cd services/card-service && npm run start:dev",
    "dev:notification": "cd services/notification-service && npm run start:dev",
    "dev:file": "cd services/file-service && npm run start:dev",
    "dev:gateway": "cd services/api-gateway && npm run start:dev",
    "build:all": "npm run build:auth && npm run build:user && npm run build:board && npm run build:list && npm run build:card && npm run build:notification && npm run build:file && npm run build:gateway",
    "build:auth": "cd services/auth-service && npm run build",
    "build:user": "cd services/user-service && npm run build",
    "build:board": "cd services/board-service && npm run build",
    "build:list": "cd services/list-service && npm run build",
    "build:card": "cd services/card-service && npm run build",
    "build:notification": "cd services/notification-service && npm run build",
    "build:file": "cd services/file-service && npm run build",
    "build:gateway": "cd services/api-gateway && npm run build",
    "test:all": "npm run test:auth && npm run test:user && npm run test:board && npm run test:list && npm run test:card && npm run test:notification && npm run test:file && npm run test:gateway",
    "test:auth": "cd services/auth-service && npm run test",
    "test:user": "cd services/user-service && npm run test",
    "test:board": "cd services/board-service && npm run test",
    "test:list": "cd services/list-service && npm run test",
    "test:card": "cd services/card-service && npm run test",
    "test:notification": "cd services/notification-service && npm run test",
    "test:file": "cd services/file-service && npm run test",
    "test:gateway": "cd services/api-gateway && npm run test",
    "lint:all": "npm run lint:auth && npm run lint:user && npm run lint:board && npm run lint:list && npm run lint:card && npm run lint:notification && npm run lint:file && npm run lint:gateway",
    "lint:auth": "cd services/auth-service && npm run lint",
    "lint:user": "cd services/user-service && npm run lint",
    "lint:board": "cd services/board-service && npm run lint",
    "lint:list": "cd services/list-service && npm run lint",
    "lint:card": "cd services/card-service && npm run lint",
    "lint:notification": "cd services/notification-service && npm run lint",
    "lint:file": "cd services/file-service && npm run lint",
    "lint:gateway": "cd services/api-gateway && npm run lint",
    "docker:build:all": "docker-compose -f ../docker-compose.dev.yml --profile services build",
    "docker:up": "docker-compose -f ../docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f ../docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f ../docker-compose.dev.yml logs -f",
    "setup:aws-local": "cd .. && ./setup-local-aws.ps1",
    "clean": "rimraf dist node_modules package-lock.json",
    "clean:all": "npm run clean && cd services/auth-service && npm run clean && cd ../user-service && npm run clean && cd ../board-service && npm run clean && cd ../list-service && npm run clean && cd ../card-service && npm run clean && cd ../notification-service && npm run clean && cd ../file-service && npm run clean && cd ../api-gateway && npm run clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "keywords": ["microservices", "nestjs", "kanban", "typescript"],
  "author": "Your Name",
  "license": "MIT"
} 